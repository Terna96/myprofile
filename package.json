{
  "name": "portfolio-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "engines": {
    "node": ">=18.18"
  },
  "packageManager": "npm@10",
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:client": "npm --workspace apps/client run dev",
    "dev:server": "npm --workspace apps/server run dev",
    "build": "npm-run-all -s build:*",
    "build:client": "npm --workspace apps/client run build",
    "build:server": "npm --workspace apps/server run build",
    "start": "npm --workspace apps/server start",
    "lint": "npm-run-all -p lint:*",
    "lint:client": "npm --workspace apps/client run lint",
    "lint:server": "npm --workspace apps/server run lint",
    "typecheck": "npm-run-all -p typecheck:*",
    "typecheck:client": "npm --workspace apps/client run typecheck",
    "typecheck:server": "npm --workspace apps/server run typecheck",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3"
  }
}